        "def remover_fruta(lista, fruta):\n",
        "    if fruta in lista:\n",
        "        lista.remove(fruta)\n",
        "    else:\n",
        "        print(f\"{fruta} não está na lista.\")\n",
        "\n",
        "def adicionar_fruta(lista, fruta):\n",
        "    lista.append(fruta)\n",
        "\n",
        "def alterar_fruta(lista, fruta_antiga, fruta_nova):\n",
        "    if fruta_antiga in lista:\n",
        "        index = lista.index(fruta_antiga)\n",
        "        lista[index] = fruta_nova\n",
        "    else:\n",
        "        print(f\"{fruta_antiga} não está na lista.\")\n",
        "\n",
        "frutas = [\"melancia\", \"melão\", \"manga\", \"banana\", \"morango\"]\n",
        "\n",
        "# a) Remover \"banana\" da lista\n",
        "remover_fruta(frutas, \"\")\n",
        "\n",
        "# b) Adicionar \"maracujá\" na lista\n",
        "adicionar_fruta(frutas, \"maracujá\")\n",
        "\n",
        "# c) Alterar \"melão\" para \"maçã\"\n",
        "alterar_fruta(frutas, \"melão\", \"maçã\")\n",
        "\n",
        "print(frutas)\n"
